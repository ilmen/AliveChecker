<Window x:Class="AliveCheckerService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:classes="clr-namespace:AliveCheckerService.Classes"
        Name="rootLayout"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                Background="#03a9f4">
                <TextBlock
                    Text="Device status"
                    FontFamily="Tahoma"
                    FontSize="20"
                    Padding="54 0 0 0"
                    VerticalAlignment="Center"
                    Foreground="White"/>
            </Border>
            <ListView 
                Grid.Row="1"
                ItemsSource="{Binding Pings}"
                Padding="40 20 0 0">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="classes:PingModelView">
                        <Grid
                            HorizontalAlignment="Stretch"
                            Margin="0 10 0 0">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Left"
                                FontSize="14"
                                Text="{Binding Name}"/>
                            <TextBlock
                                Grid.Row="1"
                                FontSize="10"
                                Foreground="Gray"
                                Padding="20 0 0 0"
                                Text="{Binding PingDelay}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                </ListView>
        </Grid>
        <Button
            Height="40" Width="40"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0 60 30 0"
            Command="{Binding HideCommand}"
            CommandParameter="{Binding ElementName=rootLayout}">
        </Button>
    </Grid>
</Window>
